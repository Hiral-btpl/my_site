<% if user_signed_in? %>
  <li>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
    <%= link_to('Login', new_user_session_path) %>  
  </li>
<% end %>

<p id="notice"><%= notice %></p>

<%= link_to "create your own article", new_user_article_path(params[:user_id]) %>

<%= render "articles/title_search_box" %>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%# article.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= @svg.html_safe %>